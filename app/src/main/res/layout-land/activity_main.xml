<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yomii.adaptdptoscreen.MainActivity">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_15">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dp_3"
            android:text="@string/description_land" />

        <TextView
            android:id="@+id/metrics_argus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:lineSpacingExtra="@dimen/dp_3" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="#8891FFCA"
            android:gravity="center"
            android:text="match" />

        <TextView
            android:layout_width="@dimen/dp_640"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="#8891FFCA"
            android:gravity="center"
            android:text="640dp" />

        <TextView
            android:layout_width="@dimen/dp_320"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="#8891FFCA"
            android:gravity="center"
            android:text="320dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150">

            <View
                android:id="@+id/middle_guide_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@android:color/black" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/middle_guide_line">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="toCalculatePage"
                    android:text="基准参数计算方式"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12" />

            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/middle_guide_line">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="toImmersivePage"
                    android:text="-v19文件夹的作用"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12" />

            </FrameLayout>

        </RelativeLayout>


    </LinearLayout>

</ScrollView>




